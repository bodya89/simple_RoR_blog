<div style="margin: 1em">
	<h4 style="margin:0"><%= comment.user_info %></h4>


	<%= comment.data %>
	<br>
	<%= time_ago_in_words(comment.created_at) + " ago" %>

	<br>

	<% if user_signed_in? and comment.user_info == current_user.email %>
		<span><%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Delete ?' } %></span>
		<br>
	<% end %>
	<hr>
</div>