

<h2><%= link_to 'Back', posts_path %></h2>
<div id="show_post">
	
	<h1><%= @post.title %></h1>
	<hr>
	<div>
		<%= @post.body %>
	</div>
	<hr>

	<% if user_signed_in? and current_user.id == @post.user.id %>
		<%= link_to 'Edit', edit_post_path(@post) %> 
		<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }  %>
	<% else %>
		<span>Created by <%= @post.user.email %></span>
		<br>
	<% end %>

	

	<br>
	<br>
	
	<h2>Comments</h2>
	<div style="border: solid">
		<%= render @post.comments %> 
	</div>
	<% if user_signed_in? %>
		<%= render 'comments/form' %> 
	<% else %>
		<span>To add comment <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %></span>
	<% end %>
</div>

